<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_padding_size_biggest_mid"
    android:background="@color/main_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/margin_padding_size_medium_small"
        android:layout_marginTop="@dimen/margin_padding_size_medium_small"
        android:layout_marginBottom="@dimen/margin_padding_size_medium_small"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/circle_button_back"
        android:layout_width="@dimen/margin_padding_size_xxlarge_mid"
        android:layout_height="@dimen/margin_padding_size_xxlarge_mid"
        android:layout_marginStart="@dimen/margin_padding_size_medium_mid_small_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button_back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_medium_mid"
        app:layout_constraintStart_toEndOf="@+id/button_back"
        app:layout_constraintTop_toTopOf="@+id/button_back"
        app:layout_constraintBottom_toBottomOf="@+id/button_back"
        android:layout_marginStart="@dimen/margin_padding_size_medium_small"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/screen_title"
        style="@style/News_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_back"
        app:layout_constraintBottom_toBottomOf="@+id/button_back"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/screen_title_image"
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:layout_marginTop="@dimen/margin_padding_size_medium_small"
        android:layout_marginBottom="@dimen/margin_padding_size_medium_small"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button_next"
        android:layout_width="@dimen/square_rounded_corner_button_small_width"
        android:layout_height="@dimen/square_rounded_corner_button_small_height"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_medium_mid"
        app:layout_constraintEnd_toStartOf="@+id/button_menu"
        app:layout_constraintTop_toTopOf="@+id/button_back"
        app:layout_constraintBottom_toBottomOf="@+id/button_back"
        android:layout_marginEnd="@dimen/margin_padding_size_medium_small"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/button_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_back"
        app:layout_constraintBottom_toBottomOf="@+id/button_back"
        android:layout_marginEnd="@dimen/margin_padding_size_medium_small"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:layout_marginTop="@dimen/margin_padding_size_medium_small"
        android:layout_marginBottom="@dimen/margin_padding_size_medium_small" />

    <com.vylo.common.widget.MainButton
        android:id="@+id/button_border_next"
        android:layout_width="52dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_back"
        android:layout_marginEnd="@dimen/margin_padding_size_medium_small_mid_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_back" />

    <View
        android:id="@+id/bottom_border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>