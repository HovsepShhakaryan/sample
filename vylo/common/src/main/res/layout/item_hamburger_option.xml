<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_padding_size_medium_small_mid_small">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_insight_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/option"
        style="@style/MainText.H7_1"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margin_padding_size_medium"
        android:paddingVertical="@dimen/margin_padding_size_medium_small_mid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item Kebab Option" />

    <View
        android:layout_width="@dimen/zero"
        android:layout_height="@dimen/half_one"
        android:background="@color/shadow"
        android:layout_marginStart="@dimen/margin_padding_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/option"
        app:layout_constraintTop_toBottomOf="@+id/option" />

</androidx.constraintlayout.widget.ConstraintLayout>