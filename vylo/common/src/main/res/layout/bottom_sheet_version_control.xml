<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/upload_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_update_icon"
        android:layout_marginTop="@dimen/margin_padding_size_xxxlarge_small_mid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/upload_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_size_large_small_mid_mid"
        style="@style/MainText.H8_3.Regular_upload"
        android:text="@string/update_required_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_icon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/upload_title_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/margin_padding_size_large"
        android:layout_marginTop="@dimen/margin_padding_size_large_pre_small_mid"
        style="@style/MainText.H8_3.Regular_upload_desc"
        android:text="@string/update_required_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_title"/>

    <com.vylo.common.widget.MainButton
        android:id="@+id/go_to_app_store_button"
        android:layout_width="@dimen/rounded_corner_button_big_width"
        android:layout_height="@dimen/rounded_corner_button_big_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_padding_size_xxlarge_mid_mid"
        android:layout_marginBottom="@dimen/container_72"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_title_description"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>